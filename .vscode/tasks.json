{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "swift-build",
            "type": "shell",
            "command": "swift build",
            "group": "build",
            "problemMatcher": [
                "$swiftc"
            ]
        },
        {
            "label": "swift-run",
            "type": "shell",
            "command": "swift run",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        }
    ]
}